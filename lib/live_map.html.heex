<svg id={@id} version="1.1" xmlns="http://www.w3.org/2000/svg" width={@width} height={@height}>
  <title><%= @title %></title>

  <style>
    <%= render_slot(@style) %>
  </style>

  <svg viewBox={viewbox(@tiles)} preserveAspectRatio="xMidYMid slice">
    <title>Tile Layer</title>

    <%= for tile <- @tiles do %>
      <image
        href={"https://tile.openstreetmap.org/#{@zoom}/#{tile.x}/#{tile.y}.png"}
        x={tile.x}
        y={tile.y}
        width="1"
        height="1"
      />
    <% end %>
  </svg>

  <g transform={"translate(#{@width - 24 - 16},#{@height - 24 - 16 - 24})"}>
    
    <rect x="0" y="0" width="24" height="48" rx="5" ry="5" fill="white" />

    <g
      role="button"
      tabindex="0"
      aria-label="Zoom In"
      width="24"
      height="24"
      cursor="pointer"
      pointer-events="all"
      phx-click="zoom_in"
      phx-keyup="zoom_in"
      phx-throttle="500"
      phx-target={@myself}
    >
      <%= if @zoom_in != [] do %>
        <%= render_slot(@zoom_in) %>
      <% else %>
        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
      <% end %>
      <rect x="0" y="0" width="24" height="24" fill="none" />
    </g>

    <g
      role="button"
      tabindex="0"
      aria-label="Zoom Out"
      width="24"
      height="24"
      transform="translate(0,24)"
      cursor="pointer"
      pointer-events="all"
      phx-click="zoom_out"
      phx-keyup="zoom_out"
      phx-throttle="500"
      phx-target={@myself}
    >
      <%= if @zoom_out != [] do %>
        <%= render_slot(@zoom_out) %>
      <% else %>
        <path d="M19 13H5v-2h14v2z" />
      <% end %>
      <rect x="0" y="0" width="24" height="24" fill="none" />
    </g>
  </g>
</svg>
